@{
    ViewBag.Title = "Admin Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            justify-content: center;
            height: 100vh;
            text-align: center;
            background-image: linear-gradient(to right, #3ca33c, #ffffff);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            color: #333;
            overflow-y: auto;
        }

        .adminpage-container {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
            margin-left: 350px;
            margin-top: 50px;
        }

        h2 {
            font-size: 29px;
            font-weight: 700;
            margin-bottom: 20px;
            color: #2e8b57;
        }

        h3 {
            font-size: 18px;
            margin-bottom: 2px;
            color: #444;
        }

        p {
            font-size: 14px;
            margin-bottom: 1px;
            color: #666;
        }

        .btn {
            font-size: 14px;
            padding: 8px 16px;
            border-radius: 6px;
            text-decoration: none;
            color: white;
            transition: background-color 0.3s ease;
            display: inline-block;
            margin: 2px 0;
        }

        .btn-primary {
            background-color: #3ca33c;
        }

        .btn-success {
            background-color: #2e8b57;
        }

        .btn-primary:hover {
            background-color: #2e8b57;
        }

        .btn-success:hover {
            background-color: #1b5a3b;
        }

        .section {
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 1px solid #ddd;
        }

        .section:last-child {
            margin-bottom: 0;
            padding-bottom: 0;
            border-bottom: none;
        }
    </style>
</head>
<body>
    <div class="adminpage-container">
        <h2>Admin Sayfasına Hoşgeldiniz!</h2>

        <div class="section">
            <h3>Kursları Yönet</h3>
            <p>Kurslar hakkında ayrıntılı bilgi için tıklayınız.</p>
            <a href="@Url.Action("ManageCourses", "Admin")" class="btn btn-primary">Kursları Yönet</a>
        </div>

        <div class="section">
            <h3>Eğitmenleri Yönet</h3>
            <p>Eğitmenler hakkında ayrıntılı bilgi için tıklayınız.</p>
            <a href="@Url.Action("ManageInstructors", "Admin")" class="btn btn-primary">Eğitmenleri Yönet</a>
        </div>

        <div class="section">
            <h3>Yeni Kurs Ekle</h3>
            <p>Yeni kurs eklemek için tıklayınız.</p>
            <a href="@Url.Action("CreateCourse", "Admin")" class="btn btn-success">Kurs Ekle</a>
        </div>

        <div class="section">
            <h3>Yeni Eğitmen Ekle</h3>
            <p>Yeni eğitmen eklemek için tıklayınız.</p>
            <a href="@Url.Action("CreateInstructor", "Admin")" class="btn btn-success">Eğitmen Ekle</a>
        </div>

        <div class="section">
            <h3>Kullanıcıları Yönet</h3>
            <p>Sistemdeki kullanıcıları yönetmek için tıklayınız.</p>
            <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-primary">Kullanıcıları Yönet</a>
        </div>
    </div>
</body>
</html>
