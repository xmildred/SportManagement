@{
    ViewData["Title"] = "Başvuru Tamamlandı";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
       .success-body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to bottom, #98FB98, #F0FFF0);
            color: #2F4F4F;
            margin: 0;
            padding: 0;
            text-align: center;
            
        }

        
        .success-container {
        background-color: #F0FFF0;
        border: 2px solid #32CD32;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 128, 0, 0.2);
        padding: 20px;
        max-width: 600px;
        max-height: 300px;
        margin: 0 auto;
        gap: 20px;
        margin-top: 200px;
        
    }

        .success-details h2 {
            color: #006400;
            margin-bottom: 20px;
        }

        .success-details p {
            font-size: 18px;
            color: #2F4F4F;
        }

        a.button {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #32CD32;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

        a.button:hover {
            background-color: #28a745;
        }
    </style>
</head>
<body>
    <div class="success-container">
        <h2>@ViewData["Title"]</h2>
        <p>Başvurunuz başarıyla tamamlandı!</p>
        <a href="@Url.Action("StudentCoursePage", "Student")" class="button">Kurslara Geri Dön</a>
    </div>
</body>
</html>
