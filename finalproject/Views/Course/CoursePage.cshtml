@model IEnumerable<finalproject.Models.CourseViewModel>

@{
    ViewData["Title"] = "Kurslar";
}

<h2 style="color: #2F4F4F;">Kurslar</h2>

<div class="course-container">
    @foreach (var course in Model)
    {
        <div class="course-item">
            <img src="@course.PhotoUrl" alt="@course.CourseName" class="course-image" />
            <div class="course-details">
                <h3>@course.CourseName</h3>
                <p><strong>Instructor:</strong> @course.InstructorName @course.InstructorSurname</p>
                <p><strong>Room:</strong> @course.RoomID</p>
                <p><strong>Capacity:</strong> @course.Capacity</p>
            </div>
        </div>
    }
</div>

<style>
    .course-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        padding: 20px;
        background: linear-gradient(to bottom, #98FB98, #F0FFF0);
        border-radius: 10px;
    }

    .course-item {
        background-color: #F0FFF0;
        border: 2px solid #32CD32;
        border-radius: 10px;
        padding: 15px;
        box-shadow: 0px 4px 8px rgba(0, 128, 0, 0.2);
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .course-item:hover {
        transform: translateY(-5px);
        box-shadow: 0px 8px 16px rgba(0, 128, 0, 0.3);
    }

    .course-image {
        width: 100%;
        height: auto;
        border-radius: 8px;
    }

    .course-details h3 {
        color: #2F4F4F;
        margin-top: 10px;
    }

    .course-details p {
        color: #006400;
        margin: 5px 0;
    }
</style>
